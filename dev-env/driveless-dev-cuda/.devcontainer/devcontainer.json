{
    "name": "robot-devenv",
    "dockerFile": "../Dockerfile",
  
    "settings": {
      "terminal.integrated.shell.linux": "/bin/bash"
    },
  
    "extensions": [
      "ms-python.python", 
      "tht13.python",
      "visualstudioexptteam.vscodeintellicode", 
      "ms-toolsai.jupyter",
      "ms-vscode.cpptools-extension-pack"
    ],
  
    "forwardPorts": ["8888:20000", "22:2222"],
  
    //"postCreateCommand": "yarn install",
  


    "runArgs": ["--gpus", "all", 
      "--privileged", "--rm", 
      "--net", "host",
      "--ipc", "host",
      "--env", "DISPLAY=$DISPLAY",
      "--env", "XAUTHORITY=$XAUTHORITY",
      "--env", "PULSE_SERVER=unix:/run/user/1000/pulse/native",
      "--volume", "/tmp/.X11-unix:/tmp/.X11-unix",
      "--volume", "/dev/video0:/dev/video0",
      "--volume", "/home/cristiano/.Xauthority:/home/out0/.Xauthority:rw", 
      "--volume", "/home/cristiano/Documents/Projects/Mestrado/Project/driveless/planner:/home/out0/planner",
      "--runtime", "nvidia", 
      "-e", "SDL_HINT_CUDA_DEVICE=0",
      "-e", "NVIDIA_VISIBLE_DEVICES=0"
    ],
    
    "remoteUser": "out0"
  }